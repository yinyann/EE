<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EightEpics.Controls.Hero">
    <ContentView.Content>
        <Grid>
            <BoxView BackgroundColor="Green" ></BoxView>
            <Label Text="{Binding Path=Name}" Grid.Column="1" />
            <Label Text="{Binding Path=LifePoints}" Grid.Column="2" HorizontalTextAlignment="End" />
        </Grid>        
    </ContentView.Content>
</ContentView>
